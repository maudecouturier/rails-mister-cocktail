<div class="card-category" id="banner-card" style="background-image: url('<%= cl_image_path @cocktail.photo.key if cocktail.photo.attached? %>')">
  <h1><%= @cocktail.name %></h1>
  <p id="absolute"><%= link_to 'Back', cocktails_path %></p>
</div>

  <div class="m-3" id="ingredient-background">
    <h3>List of ingredients</h3>
    <ul>
      <% @cocktail.doses.each do |dose| %>
        <li>
          <%= dose.description %>
          <%= dose.ingredient.name %>
          <%= link_to 'Delete', dose_path(dose), method: :delete, data: {:confirm => 'Are you sure?'}%>
        </li>
        <% end %>
    </ul>
    <p><%= link_to 'Add an ingredient', new_cocktail_dose_path(@cocktail) %></p>
  </div>

