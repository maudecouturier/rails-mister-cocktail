<div class="card-category" id="banner-card">
  <h1>Cocktails</h1>
</div>
<div class="cards p-4" >
  <div class="card-category m-2" id="new-recipe-card">
    <p><%= link_to 'Add a cocktail', new_cocktail_path, class:"text-decoration-none text-secondary" %></p>
  </div>
  <% @cocktails.each do |cocktail| %>
    <%= link_to cocktail_path(cocktail), class:"text-decoration-none" do %>
      <div class="card-category m-2" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),url('<%= cl_image_path cocktail.photo.key %>')">
      <%= cocktail.name %>
    </div>
      <% end %>
  <% end %>
</div>




